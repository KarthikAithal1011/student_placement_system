<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/custom.css?v=1.3">
    <link rel="stylesheet" href="/animations.css">
</head>

<body class="admin-page">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-6">
                <div class="card login-card shadow-lg">
                    <div class="card-body">
                        <div class="text-center mb-4 animated fadeInUp">
                            <i class="fas fa-user-shield fa-3x text-primary animated bounceIn"></i>
                            <h1 class="h3 mb-3 font-weight-normal animated slideInLeft">Admin Login</h1>
                        </div>
                        <% if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                        <% } %>
                        <form id="adminLoginForm" action="/admin/login" method="POST" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="full-width-input" id="username" name="username" required
                                    placeholder="Enter your username">
                                <div class="invalid-feedback">
                                    Please enter a username.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="full-width-input" id="password" name="password" required
                                    placeholder="Enter your password">
                                <div class="invalid-feedback">
                                    Please enter a password.
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg animated pulse">Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center animated slideInRight">
                        <a href="/" class="btn btn-outline-info btn-lg text-decoration-none animated glow">Student Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            'use strict';
            const form = document.getElementById('adminLoginForm');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
</body>

</html>