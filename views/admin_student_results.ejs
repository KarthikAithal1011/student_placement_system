<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Results</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/custom.css?v=1.3">
    <link rel="stylesheet" href="/animations.css">
</head>
<body class="admin-page">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card shadow-lg animated fadeIn">
                    <div class="card-header bg-primary text-white animated slideInRight">
                        <h4 class="mb-0 animated bounceIn"><i class="fas fa-user-shield me-2"></i>Admin Dashboard</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column" style="height: 100%">
                            <div>
                                <div class="text-center mb-4">
                                    <i class="fas fa-poll fa-3x text-primary mb-2 animated bounceIn"></i>
                                    <h5 class="mb-3 animated slideInLeft">Student Results for Roll Number: <span class="fw-bold"><%= roll_number %></span></h5>
                                </div>
                                <% if (results && results.length > 0) { %>
                                <div class="table-responsive animated fadeInUp">
                                    <table class="table table-striped table-hover table-lg">
                                        <thead class="table-dark animated slideInLeft">
                                            <tr>
                                                <th>Name</th>
                                                <th>Aptitude</th>
                                                <th>Technical</th>
                                                <th>Verbal</th>
                                                <th>Programming</th>
                                                <th>General Awareness</th>
                                                <th>Total</th>
                                                <th>Tier</th>
                                                <th>Auto Submitted</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% results.forEach(function(result) { %>
                                            <tr>
                                                <td><%= result.name %></td>
                                                <td><%= result.aptitude_score %>/20</td>
                                                <td><%= result.technical_score %>/20</td>
                                                <td><%= result.verbal_score %>/20</td>
                                                <td><%= result.programming_score %>/20</td>
                                                <td><%= result.general_awareness_score %>/20</td>
                                                <td><%= result.aptitude_score + result.technical_score + result.verbal_score + result.programming_score + result.general_awareness_score %>/100</td>
                                                <td>
                                                    <% if (!result.is_auto_submitted) { %>
                                                    <%= result.tier %>
                                                    <% } else { %>
                                                    N/A
                                                    <% } %>
                                                </td>
                                                <td><%= result.is_auto_submitted ? 'Yes' : 'No' %></td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                <div class="alert alert-danger text-center animated tada" role="alert">
                                    <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                                    <h5 class="alert-heading">Result Not Found!</h5>
                                    <p>The result for the entered roll number does not exist.</p>
                                </div>
                                <% } %>
                            </div>
                            <div class="text-center mt-auto button-container">
                                <a href="/admin/dashboard" class="btn btn-primary btn-lg animated pulse text-decoration-none"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
                                <a href="/admin/logout" class="btn btn-success btn-lg animated glow admin-logout-btn text-decoration-none">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/sweetalert2/sweetalert2.all.min.js"></script>
</body>
</html>
