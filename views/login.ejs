<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/custom.css?v=1.3">
    <link rel="stylesheet" href="/animations.css">
</head>

<body class="login-page">
    <a href="/admin/login" class="btn btn-secondary position-absolute top-0 end-0 m-3 admin-login-btn" style="z-index: 10; text-decoration: none;">Admin Login</a>
    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
        <div class="row w-100 justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
                <div class="card login-card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-5 animated fadeInUp">
                            <i class="fas fa-user-graduate fa-4x text-primary mb-3 animated bounceIn"></i>
                            <h1 class="h2 mb-3 font-weight-bold text-dark animated slideInLeft">Student Login</h1>
                            <p class="text-muted animated slideInRight">Please enter your credentials to continue</p>
                        </div>
                        <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>
                        <form id="loginForm" action="/login" method="POST" novalidate>
                            <div class="mb-2">
                                <label for="roll_number" class="form-label">Roll Number</label>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control form-control-lg full-width-input" id="roll_number" name="roll_number" required
                                    pattern="\d{3}" placeholder="Enter roll number" style="height: 50px;">
                                <div class="invalid-feedback">
                                    Please enter a valid 3-digit roll number.
                                </div>
                            </div>
                            <div class="mb-2">
                                <label for="name" class="form-label">Name</label>
                            </div>
                            <div class="mb-4">
                                <input type="text" class="form-control form-control-lg full-width-input capitalize-input" id="name" name="name" required
                                    placeholder="Enter name" style="height: 50px;">
                                <div class="invalid-feedback">
                                    Please enter your name.
                                </div>
                            </div>
                            <div class="text-center mb-4 animated fadeInUp">
                                <button type="submit" class="btn btn-primary btn-lg animated pulse">Login</button>
                            </div>
                        </form>
                        <div class="text-center mt-4 animated slideInRight">
                            <a href="/view-results" class="btn btn-outline-info btn-lg text-decoration-none animated glow">View Previous Results</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            'use strict';
            const form = document.getElementById('loginForm');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);

            // Capitalize first letter of each word in name input
            const nameInput = document.getElementById('name');
            nameInput.addEventListener('input', function () {
                this.value = this.value.replace(/\b\w/g, l => l.toUpperCase());
            });
        })();
    </script>
</body>

</html>